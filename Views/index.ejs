<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Aisha & Mayowa Wedding</title>

  <!-- BOOTSTRAP -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body class="bg-light">

  <!-- HERO SECTION (Bootstrap Grid 6 Photos) -->
  <div class="container py-4">
    <div class="row g-3">

      <!-- 6 images -->
      <div class="col-6 col-md-4">
        <img src="/img/couple1.jpeg" class="img-fluid rounded shadow-sm" />
      </div>

      <div class="col-6 col-md-4">
        <img src="/img/couple2.jpeg" class="img-fluid rounded shadow-sm" />
      </div>

      <div class="col-6 col-md-4">
        <img src="/img/couple3.jpeg" class="img-fluid rounded shadow-sm" />
      </div>

      <div class="col-6 col-md-4">
        <img src="/img/couple4.jpeg" class="img-fluid rounded shadow-sm" />
      </div>

      <div class="col-6 col-md-4">
        <img src="/img/couple5.jpg" class="img-fluid rounded shadow-sm" />
      </div>

      <div class="col-6 col-md-4">
        <img src="/img/couple6.jpg" class="img-fluid rounded shadow-sm" />
      </div>

    </div>
  </div>

  <!-- BOOTSTRAP JUMBOTRON -->
  <div class="container">
    <div class="p-5 mb-4 bg-white rounded-3 shadow-sm">
      <div class="container-fluid py-3">
        <h1 class="display-6 fw-bold text-center">Aisha & Mayowa</h1>
        <p class="text-center fs-5">
          Please register below to confirm your attendance at our wedding.
        </p>

        <div class="text-center mt-3">
          <a 
            href="https://www.google.com/maps?q=3+CMD+Road+Ikosi+Lagos"
            class="btn btn-primary btn-lg"
            target="_blank"
          >
            Get Directions to Wedding Venue
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- FLASH MESSAGE -->
  <div class="container">
    <% if (message) { %>
      <div class="alert alert-success text-center"><%= message %></div>
    <% } %>
  </div>

  <!-- BOOTSTRAP FORM -->
  <div class="container mb-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">

      <h4 class="mb-3 text-center">Wedding Registration</h4>

      <form action="/register" method="POST">

        <div class="mb-3">
          <label class="form-label">Full Name</label>
          <input type="text" name="name" class="form-control" required />
        </div>

       

        <div class="mb-3">
          <label class="form-label">Phone Number</label>
          <input type="text" name="phone" class="form-control" required />
        </div>

        <input type="hidden" name="location" value="Akera" />

        <button type="submit" class="btn btn-success w-100 py-2">
          Register
        </button>

      </form>
    </div>
  </div>

  <div class="text-center mb-4">
    <a href="/verify" class="btn btn-dark">Verify Entry Code</a>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
