<%- include("layout") %>

<div class="hero">
  <img src="/couple.jpg" class="couple-img" />

  <h1>Welcome to the Wedding of Aisha & Mayowa</h1>
  <p>Please fill the form to enroll</p>

  <% if (message) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <form action="/register" method="POST">
    <input type="text" name="name" placeholder="Full Name" required />
    <input type="text" name="address" placeholder="Address" required />
    <input type="text" name="phone" placeholder="Phone Number" required />
    <input type="hidden" name="location" value="Akera" />
    <button type="submit">Register</button>
  </form>

  <a href="/verify" class="verify-btn">Verify Entry Code</a>
</div>
